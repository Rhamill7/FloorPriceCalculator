<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.robbie.FloorPriceCalculator.fragments.SettingsFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <CheckBox
            android:id="@+id/checkBox5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_marginTop="31dp"
            android:text="Doors"
            android:layout_below="@+id/checkBox2"
            android:layout_alignStart="@+id/checkBox2" />

        <Button
            android:id="@+id/button2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="19dp"
            android:text="Next" />

        <CheckBox
            android:id="@+id/checkBox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="25dp"
            android:text="Sand + Fin"
            android:layout_below="@+id/checkBox5"
            android:layout_alignParentStart="true"
            android:layout_marginTop="13dp" />

        <CheckBox
            android:id="@+id/checkBox2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:text="Repairs"
            android:layout_marginTop="25dp"
            android:layout_below="@+id/checkBox4"
            android:layout_alignStart="@+id/checkBox" />

        <CheckBox
            android:id="@+id/checkBox3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_marginTop="31dp"
            android:text="Pine"
            android:layout_below="@+id/checkBox"
            android:layout_alignStart="@+id/checkBox" />

        <CheckBox
            android:id="@+id/checkBox4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="HardwoodF"
            android:layout_alignParentTop="true"
            android:layout_alignStart="@+id/checkBox" />

        <Button
            android:id="@+id/buttonAddMore"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Add more"
            android:layout_marginEnd="51dp"
            android:layout_alignBottom="@+id/checkBox3"
            android:layout_alignParentEnd="true" />

        <Spinner
            android:id="@+id/spinner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/checkBox5"
            android:layout_alignStart="@+id/buttonAddMore" />


    </RelativeLayout>


</FrameLayout>
