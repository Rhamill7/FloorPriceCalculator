<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:weightSum="1"
    android:id="@+id/addGoalAlert">
    <ImageView

        android:layout_width="match_parent"
        android:layout_height="23dp"
        android:scaleType="center"
        android:background="#ff0400"
        android:contentDescription="@string/app_name"
        android:layout_weight="0.38" />

    <TextView

        android:id="@+id/titleFour"
        android:text="Add Room"
        android:textColor="#ffffff"
        android:layout_width="match_parent"
        android:layout_height="23dp"
        android:scaleType="center"
        android:background="#ff0400"
        android:contentDescription="@string/app_name"
        android:layout_weight="0.5"
        android:textAppearance="?android:textAppearanceLarge"
        />

    <EditText
        android:id="@+id/roomName1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="4dp"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="4dp"
        android:layout_marginTop="16dp"
        android:hint="eg: Room 1"
        android:inputType="text" />

    <EditText
        android:id="@+id/roomLength"
        android:inputType="numberDecimal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="4dp"
        android:layout_marginBottom="4dp"
        android:hint="Length in meters eg: 15" />

    <EditText
        android:id="@+id/roomBreadth"
        android:inputType="numberDecimal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="4dp"
        android:layout_marginBottom="16dp"
        android:fontFamily="sans-serif"
        android:hint="Breadth in meters eg: 10"/>


</LinearLayout>